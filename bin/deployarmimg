#! /bin/bash

# Usage: deployarmimg image device edition version
# Example: deployarmimg Manjaro-ARM-minimal-rpi2-18.07.zip rpi2 minimal 18.07

# Set globals
_LIBDIR=/usr/share/manjaro-arm-tools/lib
torrent=false

#imports
source $_LIBDIR/functions.sh


#Arguments 
opt=":i:d:e:v:th"

while getopts "${opt}" arg; do
  case $arg in
    i)
      image="${OPTARG}"
      ;;
    d)
      device="${OPTARG}"
      ;;
    e)
      edition="${OPTARG}"
      ;;
    v)
      version="${OPTARG}"
      ;;
    t)
      torrent="true"
      ;;
    \?)
      echo "Invalid option: -${OPTARG}"
      exit 1
      ;;
    h|?)
      usage_deploy_img
      exit 1
      ;;
    :)
      echo "Option -${OPTARG} requires an argument."
      exit 1
      ;;
  esac
done

#required options
if [ "x" == "x$image" ]; then
  echo "-i [option] is required"
  exit
fi
if [ "x" == "x$edition" ]; then
  echo "-e [option] is required"
  exit
fi



# Create checksums for the image
checksum_img

#create torrent for image
if [[ $torrent = "true" ]]
then
create_torrent
fi

# Upload image + checksums to image server
img_upload


# remove pkg + sig from cache folder
#msg "Removing local files..."
#rm $image*
 
