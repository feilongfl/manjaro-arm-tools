#! /bin/bash

# Set globals
_LIBDIR=/usr/share/manjaro-arm-tools/lib

#imports
source $_LIBDIR/functions.sh

#Arguments 
opt=":e:d:v:th"

while getopts "${opt}" arg; do
  case $arg in
    e)
      edition="${OPTARG}"
      ;;
    d)
      device="${OPTARG}"
      ;;
    v)
      version="${OPTARG}"
      ;;
    \?)
      echo "Invalid option: -${OPTARG}"
      exit 1
      ;;
    h|?)
      usage_build_img
      exit 1
      ;;
    :)
      echo "Option -${OPTARG} requires an argument."
      exit 1
      ;;
  esac
done


_IMGNAME=Manjaro-ARM-$edition-$device-$version

#Need both package and architecture
if [ "x" == "x$device" ]; then
  echo "-d [option] is required"
  exit
fi
if [ "x" == "x$edition" ]; then
  echo "-e [option] is required"
  exit
fi

   
if [[ "$device" = "oc2" ]] || [[ "$device" = "pine64" ]]; then
    _ARCH='aarch64'
else
    _ARCH='armv7h'
fi

if [ ! -d "$PROFILES/arm-profiles" ]; then
    getarmprofiles
fi

#Package lists
PKG_DEVICE=$(cat $PROFILES/arm-profiles/devices/$device)
PKG_EDITION=$(cat $PROFILES/arm-profiles/editions/$edition)
SRV_EDITION=$(cat $PROFILES/arm-profiles/services/$edition)

#start timer
#timer=$(get_timer)

# Creating the rootfs used for the image.
create_rootfs_img

# Creating the image, from the rootfs created before.
create_img

# Create the .zip file, from the .img file which will get deleted.
create_zip

# show timer
#show_elapsed_time
