#! /bin/bash

# Set globals
LIBDIR=/usr/share/manjaro-arm-tools/lib

#imports
source $LIBDIR/functions.sh

#Arguments 
opt=":e:d:v:th"

while getopts "${opt}" arg; do
  case $arg in
    e)
      EDITION="${OPTARG}"
      ;;
    d)
      DEVICE="${OPTARG}"
      ;;
    v)
      VERSION="${OPTARG}"
      ;;
    \?)
      echo "Invalid option: -${OPTARG}"
      exit 1
      ;;
    h|?)
      usage_build_img
      exit 1
      ;;
    :)
      echo "Option -${OPTARG} requires an argument."
      exit 1
      ;;
  esac
done


IMGNAME=Manjaro-ARM-$EDITION-$DEVICE-$VERSION

   
if [[ "$DEVICE" = "oc2" ]] || [[ "$DEVICE" = "pine64" ]] || [[ "$DEVICE" = "rpi3" ]]; then
    ARCH='aarch64'
else
    ARCH='armv7h'
fi

if [ ! -d "$PROFILES/arm-profiles" ]; then
    getarmprofiles
fi

#Package lists
PKG_DEVICE=$(cat $PROFILES/arm-profiles/devices/$DEVICE)
PKG_EDITION=$(cat $PROFILES/arm-profiles/editions/$EDITION)
SRV_EDITION=$(cat $PROFILES/arm-profiles/services/$EDITION)

#start timer
#timer=$(get_timer)

# Creating the rootfs used for the image.
create_rootfs_img

# Creating the image, from the rootfs created before.
create_img

# Create the .zip file, from the .img file which will get deleted.
create_zip

# show timer
#show_elapsed_time
